{
  "name": "hdr-exr-ktx2-viewer",
  "displayName": "HDR/EXR/KTX2 Viewer",
  "description": "在 VSCode/Cursor 中预览 EXR、KTX2、HDR 图片文件",
  "version": "0.0.1",
  "publisher": "lxy2109",
  "engines": {
    "vscode": ">=1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onFileSystem:openFile"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "hdrExrKtx2Viewer.viewer",
        "displayName": "HDR/EXR/KTX2 图片预览",
        "selector": [
          {
            "filenamePattern": "*.exr"
          },
          {
            "filenamePattern": "*.ktx2"
          },
          {
            "filenamePattern": "*.hdr"
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -p ./"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@types/node": "^24.0.10",
    "@types/vscode": "^1.70.0",
    "rollup": "^4.44.1",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "express": "^5.1.0",
    "exr": "^1.0.0",
    "hdr.js": "^0.2.0",
    "ktx-parse": "^1.0.1",
    "multer": "^2.0.1",
    "parse-exr": "^1.0.1",
    "uuid": "^11.1.0"
  }
}
